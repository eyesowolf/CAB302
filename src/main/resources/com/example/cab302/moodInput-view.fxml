<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" alignment="TOP_LEFT" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302.controller.moodInputController">
    <padding>
        <Insets top="10.0" left="10.0" right="20.0" bottom="20.0"/>
    </padding>

    <!-- Load the logo image from the images package -->
    <ImageView preserveRatio="true" fitWidth="400" fitHeight="400">
        <image>
            <Image url="@images/Mood.e_LightMode.png"/>
        </image>
    </ImageView>

    <!-- Placeholder buttons -->
    <Button text="Button 1"/>
    <Button text="Button 2"/>
    <Button text="Button 3"/>

    <!-- Mood Tracking section -->
    <VBox alignment="CENTER">
        <!-- Left side content -->
        <VBox spacing="10">
            <!-- Label for current date -->
            <Label text="Today's Date: " style="-fx-text-fill: white;"/>
            <Label text="April 1st, 2024" style="-fx-text-fill: white;"/>
            <Label text="Today I feel..." style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- Grey-colored box for mood tracking -->
        <VBox style="-fx-background-color: #333333;" alignment="CENTER" spacing="10">
            <Label text="Mood Tracking" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
            <Button text="Happy"/>
            <Button text="Anxious"/>
            <Button text="Angry"/>
            <Button text="Upset"/>
            <Button text="Depressed"/>
            <Button text="Stressed"/>
            <Button text="Inspired"/>
            <Button text="Confident"/>
            <Button text="Tired"/>
        </VBox>
    </VBox>
</VBox>